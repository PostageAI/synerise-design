{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Synerise/synerise-design.git"
  },
  "workspaces": [
    "packages/components/*",
    "packages/portal",
    "packages/docs-site/website"
  ],
  "scripts": {
    "bootstrap": "yarn npx:lerna bootstrap",
    "build": "yarn npx:lerna run build --parallel",
    "component:create": "node ./scripts/create-component/index.js",
    "lerna:version": "yarn npx:lerna version --conventional-commits --no-git-tag-version",
    "lint": "eslint . --ext .ts --ext .tsx",
    "npx:lerna": "npx lerna",
    "storybook": "yarn run build && cd packages/portal && yarn run storybook",
    "test:ci": "yarn npx:lerna run test --parallel"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{css,less}": [
      "prettier-eslint --write",
      "git add"
    ],
    "./package.json": [
      "format-package -w",
      "git add"
    ],
    "packages/**/*.{js,ts,jsx,tsx}": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ],
    "packages/**/*.{md}": [
      "prettier-eslint --write",
      "git add"
    ],
    "packages/components/*/package.json": [
      "format-package -w",
      "git add"
    ]
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.2.0",
    "@testing-library/react": "^9.1.4",
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.18",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "copy-template-dir": "^1.4.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-standard": "^4.0.1",
    "format-package": "^5.2.0",
    "husky": "^3.0.5",
    "inquirer": "^7.0.0",
    "jest": "^24.9.0",
    "lerna": "^3.0.3",
    "less": "^3.10.3",
    "less-plugin-clean-css": "^1.5.1",
    "less-plugin-npm-import": "^2.1.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "prettier-eslint-cli": "^5.0.0",
    "react-intl": "^3.2.2",
    "react-transition-group": "^4.3.0",
    "styled-components": "^4.3.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  }
}
