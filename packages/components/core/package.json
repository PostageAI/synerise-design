{
  "name": "@synerise/ds-core",
  "version": "0.1.0",
  "description": "Core Components for the Synerise Design System",
  "license": "ISC",
  "repository": "synerise/ds",
  "main": "dist/js/index.js",
  "scripts": {
    "build": "npm run build:js && npm run vars && npm run copy && npm run build:css && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:js": "babel --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:watch": "npm run build:js -- --watch",
    "copy": "node ./build/copy.js",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly --declarationMap",
    "prepublish": "npm run build",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit",
    "vars": "node ./build/vars.js"
  },
  "sideEffects": false,
  "types": "dist/js/index.js",
  "dependencies": {
    "antd": "*"
  },
  "peerDependencies": {
    "react": ">=16.9.0 < 17.0.0"
  },
  "devDependencies": {
    "less-vars-loader": "^1.1.0",
    "webpack": "^4.39.3"
  }
}
