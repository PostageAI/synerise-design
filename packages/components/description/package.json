{
  "name": "@synerise/ds-description",
  "version": "0.1.2",
  "description": "Description UI Component for the Synerise Design System",
  "license": "ISC",
  "repository": "Synerise/synerise-design",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:js": "babel --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:watch": "npm run build:js -- --watch",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit"
  },
  "sideEffects": [
    "dist/style/*",
    "*.less"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@synerise/ds-avatar": "^0.8.26",
    "@synerise/ds-button": "^0.12.24",
    "@synerise/ds-core": "^0.16.0",
    "@synerise/ds-icon": "^0.22.0",
    "@synerise/ds-tooltip": "^0.7.12",
    "@synerise/ds-typography": "*",
    "classnames": "^2.2.6"
  },
  "peerDependencies": {
    "@synerise/ds-core": "*",
    "copy-to-clipboard": "^3.3.1",
    "react": ">=16.9.0 < 17.0.0"
  },
  "devDependencies": {
    "@synerise/ds-utils": "^0.8.31"
  }
}
