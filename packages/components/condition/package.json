{
  "name": "@synerise/ds-condition",
  "version": "0.3.3",
  "description": "Condition UI Component for the Synerise Design System",
  "license": "ISC",
  "repository": "Synerise/synerise-design",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run defs",
    "build:css": "node ../../../scripts/style/less.js",
    "build:js": "babel --root-mode upward src --out-dir dist --extensions '.js,.ts,.tsx'",
    "build:watch": "npm run build:js -- --watch",
    "defs": "tsc --declaration --outDir dist/ --emitDeclarationOnly",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "types": "tsc --noEmit"
  },
  "sideEffects": [
    "dist/style/*",
    "*.less"
  ],
  "types": "dist/index.d.ts",
  "dependencies": {
    "@synerise/ds-button": "^0.13.24",
    "@synerise/ds-context-selector": "^0.2.2",
    "@synerise/ds-core": "^0.26.0",
    "@synerise/ds-cruds": "^0.2.1",    
    "@synerise/ds-factors": "^0.2.17",
    "@synerise/ds-inline-edit": "^0.2.16",
    "@synerise/ds-operators": "^0.2.16",
    "@synerise/ds-subject": "^0.4.2",
    "@synerise/ds-tooltip": "^0.10.8",
    "@synerise/ds-utils": "^0.11.12",
    "react-sortablejs": "^6.0.0",
    "react-sortablejs-typescript": "^2.0.15"
  },
  "peerDependencies": {
    "@synerise/ds-core": "*",
    "react": ">=16.9.0 < 17.0.0"
  }
}
