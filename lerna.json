{
  "packages": ["packages/components/*", "packages/portal", "packages/docs-site/website"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "version": {
      "allowBranch": [
        "master"
      ],
      "message": "build: publish",
      "conventionalCommits": true,
      "noGitTagVersion": true
    }
  }

}
